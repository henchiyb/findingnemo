<div class="contact-bg overview-bgi">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Form content box start -->
                <div class="form-content-box">
                    <!-- details -->
                    <div class="details">
                        <h3>Sign up your account</h3>
                        <!-- Form start -->
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                          <%= devise_error_messages! %>
                          <div class="form-group">
                            <%= f.text_field :nick_name, autofocus: true,
                              placeholder: :nick_name, class: "input-text" %>
                          </div>
                          <div class="form-group">
                            <%= f.text_field :birthday,
                              data:{ provide:'datepicker' },
                              class: "input-text", placeholder: :birthday %>
                          </div>
                          <div class="form-group">
                            <%= f.email_field :email, autofocus: true,
                              autocomplete: "email", placeholder: :email,
                              class: "input-text" %>
                          </div>
                          <div class="form-group">
                            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: :password, class: "input-text" %>
                          </div>
                        
                          <div class="form-group">
                            <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", placeholder: :password_confirmation, class: "input-text" %>
                          </div>
                        
                          <div class="mb-0">
                            <button type="submit" class="btn-md btn-theme btn-block">sign up</button>
                          </div>
                        <% end %>
                    </div>
                    <div class="footer">
                        <%= render "devise/shared/links" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
