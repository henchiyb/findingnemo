<p id="notice"><%= notice %></p>

<h1>Listing Hotel Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Hotel</th>
      <th>Comment</th>
      <th>Space rating</th>
      <th>Service rating</th>
      <th>Security rating</th>
      <th>Clean rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hotel_reviews.each do |hotel_review| %>
      <tr>
        <td><%= hotel_review.user_id %></td>
        <td><%= hotel_review.hotel_id %></td>
        <td><%= hotel_review.comment %></td>
        <td><%= hotel_review.space_rating %></td>
        <td><%= hotel_review.service_rating %></td>
        <td><%= hotel_review.security_rating %></td>
        <td><%= hotel_review.clean_rating %></td>
        <td><%= link_to 'Show', hotel_review %></td>
        <td><%= link_to 'Edit', edit_hotel_review_path(hotel_review) %></td>
        <td><%= link_to 'Destroy', hotel_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

