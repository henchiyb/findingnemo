<p id="notice"><%= notice %></p>

<h1>Listing Hotel Pictures</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Hotel</th>
      <th>Picture link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hotel_pictures.each do |hotel_picture| %>
      <tr>
        <td><%= hotel_picture.user_id %></td>
        <td><%= hotel_picture.hotel_id %></td>
        <td><%= hotel_picture.picture_link %></td>
        <td><%= link_to 'Show', hotel_picture %></td>
        <td><%= link_to 'Edit', edit_hotel_picture_path(hotel_picture) %></td>
        <td><%= link_to 'Destroy', hotel_picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

